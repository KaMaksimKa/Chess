<Window x:Class="Chess.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mD="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:l="clr-namespace:Chess.Views.Windows"
        xmlns:uc="clr-namespace:Chess.Views.UserControls"
        xmlns:vm="clr-namespace:Chess.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:GameViewModel/>
    </Window.DataContext>
    
    <Grid>
        <uc:ChessBoardUserControl SizeBoard="300"  
                                  MoveInfo="{Binding MoveInfo,Mode=OneWay}"
                                  StartPoint="{Binding StartPoint,Mode=TwoWay}"
                                  EndPoint="{Binding EndPoint,Mode=TwoWay}"
                                  Hints="{Binding Hints}"
                                  Icons="{Binding Icons,Mode=OneWay}"></uc:ChessBoardUserControl>
        

    </Grid>
    

</Window>
